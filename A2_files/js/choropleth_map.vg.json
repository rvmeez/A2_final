{
	"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
	"width": 1000,
	"height": 600,
	"padding": { "left": 10, "right": 10 },
	"data": {
		"url": "https://raw.githubusercontent.com/rvmeez/A2_final/main/A2_files/js/ne_110m_admin_0_countries.topojson",
		"format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
	},
	"params": [
		{
			"name": "zoom",
			"value": 225,
			"bind": {
				"input": "range",
				"min": 225,
				"max": 400,
				"step": 50,
				"name": "Zoom Level: "
			}
		},
		{
			"name": "focus",
			"value": [0, 0],
			"bind": {
				"input": "select",
				"options": [
					[0, 0],
					[80, 144],
          [130, -30],
          [9, 1],
					[-60, -22],
					
					
					[-90, 120]
				],
				"labels": [
					"World",
					"Eurasia",
          "Asia Pacific",
          "Africa",
					"S. America",
					"N. America"
				],
				"name": "Map Focus: "
			}
		}
	],
	"projection": {
		"type": "equalEarth",
		"scale": { "expr": "zoom" },
		"rotate": [-35, 0, 0],
		"center": { "expr": "focus" }
	},
	"layer": [
		{
			"transform": [
				{
					"calculate": "'Data unavailable for ' + datum.properties.NAME_EN",
					"as": "note"
				}
			],
			"mark": { "type": "geoshape", "fill": "lightgray", "stroke": "black" },
			"encoding": {
				"tooltip": { "field": "note" }
			}
		},
		{
			"data": {
				"url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
				"format": { "type": "topojson", "feature": "oceans" }
			},
			"mark": { "type": "geoshape", "fill": "#2a2e4c" }
		},
		{
			"data": {
				"url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
				"format": { "type": "topojson", "feature": "ne_110m_graticules_30" }
			},
			"mark": { "type": "geoshape", "fill": null, "stroke": "#1a1e38" }
		},
		{
			"data": {
				"url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
				"format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
			},
			"mark": { "type": "geoshape", "fill": "null", "stroke": "#cfcaca" }
		},
		{
			"transform": [
				{
					"lookup": "properties.NAME_EN",
					"from": {
						"data": {
							"url": "https://raw.githubusercontent.com/rvmeez/A2_final/main/A2_files/data/covid_10_10_2020.csv"
						},
						"key": "Country",
						"fields": ["Confirmed"]
					}
				}
			],
			"mark": { "type": "geoshape" },
			"encoding": {
				"color": {
					"field": "Confirmed",
					"type": "quantitative",
					"scale": {
						"type": "threshold",
						"domain": [10000, 20000, 40000, 60000, 150000, 400000, 550000, 700000],
						"range": [
							"#99d1d0",
							"#7abec8",
							"#65b3c2",
							"#58acbe",
							"#3d97b3",
							"#3582a4",
							"#316d94",
              "#19496a"
						]
					},
					"legend": {
						"orient": "bottom-right",
						"direction": "horizontal",
						"labelColor": "white",
						"titleColor": "white"
					}
				},
				"tooltip": [
					{
						"field": "properties.NAME_EN",
						"type": "nominal",
						"title": "Country:"
					},
					{
						"field": "Confirmed",
						"type": "quantitative",
						"title": "Total Cases:"
					}
				]
			}
		}
	],
	"config": { "view": { "stroke": "transparent" }, "background": "#2a2e4c" }
}